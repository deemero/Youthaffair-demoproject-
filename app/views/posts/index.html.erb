<h1>Forum</h1>

<%= link_to 'New post', new_post_path,class: "btn btn-primary btn-lg" %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>

    <td><%= link_to 'Show', post_path(post), class: "btn btn-success" %></td>
    <% if current_user && current_user.admin %>
    <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-success" %></td>
    <td><%= link_to 'Destroy', post_path(post),
                   method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-success" %>
                 </td>
      <%end %>
  </tr>
<% end %>
</table>


